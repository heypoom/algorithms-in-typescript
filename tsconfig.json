{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "es2016",
    "jsx": "preserve",
    "strictFunctionTypes": true,
    "sourceMap": true,
    "lib": ["ES2020", "DOM"],
    "strict": true,
    "strictNullChecks": true,
    "types": ["jest", "node"],
    "baseUrl": ".",
    "paths": {
      "~/*": ["src/*"],
      "@/*": ["src/*"],
      "@*": ["src/*"]
    }
  },
  "exclude": ["node_modules", "**/node_modules/*"]
}
